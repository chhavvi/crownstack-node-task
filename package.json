{
    "name": "nodetask",
    "version": "1.0.0",
    "description": "Node task",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf build",
        "start": "tsc && node ./build/index.js",
        "dev": "nodemon --ext ts --watch src --exec './node_modules/.bin/ts-node' ./index.ts",
        "stag": "tsc && NODE_ENV=staging node ./build/index.js",
        "loadMocks": "tsc && node ./build/tasks/loadMocks.js",
        "lint-all-ts": "tsc --noEmit && eslint --fix src/**/*.ts",
        "lint": "tsc --noEmit && eslint . --fix",
        "doc": "typedoc --ignoreCompilerErrors --out ./doc src",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "node.js",
        "express",
        "ts",
        "typescript"
    ],
    "author": "chaviarora19@gmail.com",
    "dependencies": {
        "basic-auth": "^2.0.1",
        "bcrypt": "^4.0.1",
        "celebrate": "^9.1.0",
        "compression": "^1.7.4",
        "dotenv": "^7.0.0",
        "express": "^4.18.2",
        "joi": "^14.3.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^7.9.0",
        "randomstring": "^1.1.5",
        "sequelize": "^5.19.1",
        "swagger-express-ts": "^1.0.1"
    },
    "devDependencies": {
        "@types/node": "^11.12.2",
        "@types/express": "^4.16.1",
        "@types/joi": "^14.3.2",
        "typescript": "^3.4.1"
    }
}
